@model List<DogusTechBlogApp.Entity.Blog>

<h2>Bloglarım</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Title</td>
                <td>@blog.Category?.Name</td>
                <td>@blog.CreatedAt.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", "Blog", new { id = blog.Id })" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="@Url.Action("Delete", "Blog", new { id = blog.Id })" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
