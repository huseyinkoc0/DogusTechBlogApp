@model IEnumerable<DogusTechBlogApp.Entity.Blog>

@{
    ViewData["Title"] = "Bloglar";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrEmpty(blog.ImageUrl)
                                  ? "https://via.placeholder.com/600x300"
                                  : blog.ImageUrl)"
                         class="card-img-top"
                         alt="Blog Görseli"
                         style="max-height: 200px; object-fit: cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="card-subtitle text-muted mb-2">@blog.Category?.Name</p>
                        <p class="card-text flex-grow-1">
                            @blog.Content.Substring(0, Math.Min(blog.Content.Length, 100))...
                        </p>
                        <a href="@Url.Action("Details", "Blog", new { id = blog.Id })" class="btn btn-outline-primary mt-auto">Devamını Oku</a>
                    </div>
                    <div class="card-footer text-muted">
                        @blog.User.FirstName @blog.User.LastName
                    </div>
                </div>
            </div>
        }
    </div>
</div>
